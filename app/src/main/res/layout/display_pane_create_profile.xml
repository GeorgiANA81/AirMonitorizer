<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/displayPaneCreateProfile"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FF94CD6C"
    tools:showIn="@layout/activity_welcome_user">

    <TextView
        android:id="@+id/enterDisease"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="36sp"
        android:text="Enter disease:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.2"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/diseaseCP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.2"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterDisease" />

    <TextView
        android:id="@+id/chooseFromList"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16sp"
        android:text="Choose from list:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"

        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.2"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diseaseCP" />

    <HorizontalScrollView
        android:id="@+id/diseaseList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.261"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseFromList">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/asthma"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="16sp"
                android:text="Asthma"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/dustAllergy"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="16sp"

                android:text="Dust Allergy"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"

                android:textStyle="bold" />

